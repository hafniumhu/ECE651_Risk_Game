<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="200.0" prefWidth="100.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.duke.ece651.risc.client.controller.ChatController">
   <children>
      <Label text="Chat:" />
      <TextArea fx:id="area" prefHeight="200.0" prefWidth="200.0" wrapText="true" />
      <HBox>
         <children>
            <TextField fx:id="input" prefHeight="27.0" prefWidth="116.0" />
            <Button fx:id="send" mnemonicParsing="false" onMouseClicked="#send" prefHeight="27.0" prefWidth="50.0" text="&gt;&gt;" />
         </children>
      </HBox>
   </children>
</VBox>
